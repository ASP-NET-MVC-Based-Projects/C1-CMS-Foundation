<?xml version="1.0" encoding="UTF-8"?>
<visualeditor>

	<!-- stylesheets to import (tip: you can also use @import inside the CSS) -->
	<styles>
		<style file="styles/common.css"/>
		<style file="styles/core.css"/>
	</styles>
	
	<!-- 
		These format-id's will overwrite or overload TinyMCE built-in formats:
		alignleft, aligncenter, alignright, alignfull, bold, italic, underline, 
		strikethrough, forecolor, hilitecolor, fontname, fontsize, blockquote, 
		removeformat, p, h1, h2, h3, h4, h5, h6, div, address, pre, div, code, 
		dt, dd, samp. 
	-->
	
	<formats>
		<group>
			<format 
				id="bold" 
				label="Strong" 
				image=""
				notes="Strong text"  
				inline="strong">
					<!-- 
						Add button: you can overwrite the 
						label, image and notes attributes  
					-->
					<button image="Images/bold.png" label=""/>
					<!-- you can also add a "select" element! -->
			</format>
			<format 
				id="italic" 
				label="Emphasis" 
				image=""
				notes="Emphasized text" 
				inline="em">
					<button image="Images/italic.png" label=""/>
			</format>
				
			<!-- example: Button to surround selection with span.myclass
				<format id="example" 
					label="Example" 
					image=""
					notes="" 
					inline="span"
					classes="myclass">
						<button label=":)"/>
				</format>
			-->
			
			<!-- example2: Button to surround selection with html CODE tag
				<format id="example2" 
					label="Example2" 
					image=""
					notes="" 
					inline="code">
						<button label=";)"/>
				</format>
			-->
			
		</group>
		<radiogroup>
			<format 
				id="h1" 
				label="Heading H1" 
				image=""
				notes="Big heading" 
				block="h1">
					<select/>
			</format>
			<format 
				id="h2" 
				label="Heading H2" 
				image=""
				notes="Small heading" 
				block="h2">
					<select/>
			</format>
			<format 
				id="p" 
				label="Paragraph"  
				image=""
				notes="Paragraph" 
				block="p">
					<select/>
			</format>
			
			<!-- example! Selection and button to insert H1.nice -->
			<!-- NOTE the "priority" attribute to resolve this before H1 with NO class! 
			<format 
				id="h1.test" 
				label="" 
				image=""
				notes="Big heading with classname" 
				block="h1" 
				priority="1"  
				classes="nice">
					<select label="Heading H1.nice"/>
					<button label="H1.nice"/>
			</format>
			-->
			
		</radiogroup>
		<radiogroup>
			<format 
				id="alignleft" 
				label="Left" 
				image=""
				notes="Left-align images and tables" 
				classes="left" 
				selector="img,table">
					<button label="" image="images/left.png"/>
					<select image=""/>
				</format>
			<format 
				id="aligncenter" 
				label="Align Center" 
				image=""/>
			<format 
				id="alignright" 
				label="Right"  
				image="" 
				notes="Right-align images and tables" 
				classes="right" 
				selector="img,table">
					<button label="" image="images/right.png"/>
					<select image=""/>
				</format>
		</radiogroup>
	</formats>
	
</visualeditor>